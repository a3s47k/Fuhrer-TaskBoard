block content
	section.add-task-form
		.container
			.row
				.col-12.col-md-9
					form
						.form-group
							input#taskName.form-control(type='text', placeholder='Task Name')
						.row
							.col-6
								.input-group.mb-3
									.input-group-prepend
										label.input-group-text(for='inputGroupPriority') Priority Level
									select#inputGroupPriority.custom-select
