							.col-6
								.input-group.mb-3
									.input-group-prepend
										span#inputGroup-sizing-default.input-group-text Creators
									input.form-control(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default' value= 'Admin')
										

							.col-6
								.input-group.mb-3
									.input-group-prepend
