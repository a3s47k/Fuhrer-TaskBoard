extends layout

block content
	section.add-task-form
		.container
			.row
				.col-12.col-md-8
					form
						.form-group
							input#taskName.form-control(type='text',name='task-name' placeholder='Task Name')
						.row
							.col-6
								.input-group.mb-3
									.input-group-prepend
										label.input-group-text(for='inputGroupPriority') Priority Level
									select#inputGroupPriority.custom-select(name='select-priority')
										option(value='3') Low
										option(selected='' value='1') Normal
										option(value='2') Medium
										option(value='3') High
										

							.col-6
								.input-group.mb-3
									.custom-file
										input#inputGroupFile02.custom-file-input(type='file' name='view-pdf' )
										label.custom-file-label(for='inputGroupFile02') Choose file
						.row
							.col-6
								.input-group.mb-3
									.input-group-prepend
										span#inputGroup-sizing-default.input-group-text Creators
									input.form-control#creator(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default' value= 'Admin' name='creator' readonly)
										

							.col-6
								.input-group.mb-3
									.input-group-prepend
										label.input-group-text(for='inputGroupTo') To
									select#inputGroupTo.custom-select(name='select-to')
										option(value='3') Admin
										option(selected='' value='1') Manager
										option(value='2') User
										option(value='3') Sudo
						.row
							.col-6
								.input-group.mb-3
									.input-group-prepend
										span#inputGroup-date.input-group-text Date
									input#datepicker.form-control(type='text' name='date-start')

							.col-6
								.input-group.mb-3
									input.form-control#planTime(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default' name='plan-time' value= 'Plan Times')
						.row
							.col-6
								.input-group.mb-3
									input.form-control#material(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default' name='material' value= 'Material')
							.col-6
								.input-group.mb-3
									input.form-control#projectName(type='text', aria-label='Default', aria-describedby='inputGroup-sizing-default' name='project-name' value= 'Project Name')
				.col-12.col-md-4
					.row
						.col
							h4 Xem trước
					.row
						.col
							.home-task-box-item-cyan.box-shadow-4.status-blue
								.right-arrow
										a(href="#")
											i.fas.fa-angle-right
								.box-item-header
									.part-1
										.text-title
											a(href="#") K-DB-9: 
												span Lorem ipsum dolor sit 
										.open-file
											.upload-btn-wrapper
												button.btn View PDF
													i.fas.fa-file-pdf
												input(type='file', name='myfile')
									.part-2
										.priority-task
											p.priority-text Gấp
										.arrow-toggle
											a(href="#")
												i.fas.fa-angle-down
								.box-item-show
									.box-item-show-part-1
										i.fas.fa-briefcase 
											p.status-1 chưa xác định
										p.status-2 chưa xác định
										p.status-3 chưa xác định
									.box-item-show-part-2
										i.fas.fa-user
											a(href="#")
												p.author Author 
										p.time-1 6 months ago
									.box-item-show-part-3
										i.fa.fa-cog 
											a(href="#")
												p.config Edit
										p.time-2 6 months ago
					.row
						.col
							h4 Chú thích
							hr
					.row
						.col
							p.text-level L
								span low - độ ưu tiên thấp
							p.text-level N
								span normal - độ ưu tiên mặc định
							p.text-level M
								span medium - độ ưu tiên trung bình
							p.text-level H
								span high - độ ưu tiên cao
							p.text-explain Thời gian của 
								span Người thực hiện 
								span sẽ được tính từ khi nhiệm vụ được kéo sang bảng thực hiện
