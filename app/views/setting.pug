extends layout

block content
	section.system-setting
		.container
			.row
				.col-12
					.form-head
						.row
							.col
								h5 Sytem Setting
					.form-setting
						form#addTaskForm.form-body
							.row
								.col-6
									.input-group.mb-3
										.input-group-prepend
											label.input-group-text(for='inputMaxDisplay') Maximum number of task can be display
										select#inputMaxDisplay.max-display.custom-select(name='max-display')
											option(value='1') 1
											option(selected='' value='2') 2
											option(value='3') 3
											option(value='4') 4
											option(value='5') 5
											option(value='6') 6
											option(value='7') 7
											option(value='8') 8
											option(value='9') 9
											option(value='10') 10
								.col-6
									.input-group.mb-3
										.input-group-prepend
											label.input-group-text(for='inputMaxGrab') Maximum number of task can grab
										select#inputMaxGrab.max-grab.custom-select(name='max-grab')
											option(value='1') 1
											option(selected='' value='2') 2
											option(value='3') 3
											option(value='4') 4
											option(value='5') 5
											option(value='6') 6
											option(value='7') 7
											option(value='8') 8
											option(value='9') 9
											option(value='10') 10
							.row
								.col-6
									.input-group.mb-3
										label.switch 
											input#editor-toggle(type='checkbox') 
											span.slider.round 
										p.toggle-on Turn on/off Editor


								.col-6
									.input-group.mb-3
										.input-group-prepend
											label.input-group-text(for='inputGroupPriority') Maximum number of task in progress
										select#inputGroupPriority.custom-select(name='select-priority')
											option(value='1') 1
											option(selected='' value='2') 2
											option(value='3') 3
											option(value='4') 4
											option(value='5') 5
											option(value='6') 6
											option(value='7') 7
											option(value='8') 8
											option(value='9') 9
											option(value='10') 10
							.row
								.col-6
								.col-6
									.input-group.mb-3
										label.switch 
											input#one-way-toggle(type='checkbox') 
											span.slider.round 
										p.toggle-on One way grab
